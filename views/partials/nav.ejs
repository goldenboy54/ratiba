  <style>
    body {
      background-color: #f8f9fa;
      color: #343a40;
      font-family: 'Arial', sans-serif;
    }
    .navbar {
      background: linear-gradient(45deg, #007bff, #0056b3); /* Bootstrap blue gradient */
    }
    .navbar-nav .nav-item .btn {
      margin-right: 8px;
      border-radius: 25px;
      transition: background-color 0.3s, color 0.3s;
    }
    .navbar-nav .nav-item .btn:hover {
      background-color: #0056b3;
      color: #ffffff;
    }
    .navbar-nav .nav-item .btn:active {
      background-color: #003d79;
      color: #ffffff;
    }
    .container h1 {
      color: #007bff;
      font-weight: bold;
      margin-bottom: 2rem;
    }
    .img-fluid {
      border-radius: 5px;
      box-shadow: 0 4px 8px #02fc94f3;
      max-height: 40px; /* Adjusted size for better navbar fit */
      width: auto;
    }
    .btn-dark {
      background-color: #007bff; /* Blue buttons */
      border-color: #007bff;
      color: #ffffff;
    }
    .btn-dark:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }
    .navbar-nav .nav-item img {
      max-height: 40px; /* Adjusted size for better navbar fit */
      margin-left: 10px;
    }
    .animated-graphic {
      width: 100%;
      max-width: 600px;
      margin: 2rem auto;
      animation: rotate 20s linear infinite;
    }
    @keyframes rotate {
      from {
        transform: rotate(0deg);
      }
      to {
        transform: rotate(360deg);
      }
    }
    footer {
      background-color: #f8f9fa; /* Light gray background */
      color: #343a40; /* Dark gray text */
      padding: 1rem; /* Adjusted padding */
      margin-top: 2rem;
      text-align: center;
    }
    /* Table styles */
    .table {
      background-color: #ffffff; /* White background for tables */
    }
    .table-striped tbody tr:nth-of-type(odd) {
      background-color: #f2f2f2; /* Gray background for odd rows */
    }
    .table th, .table td {
      color: #343a40; /* Black text color */
    }
  </style>
</head>
